<html>
  <head>
    
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">

        <!-- jQuery library -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        
        <!-- Latest compiled JavaScript -->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
  </head>
  <style>
 #b1{
  background: url('https://images.pexels.com/photos/414612/pexels-photo-414612.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940')
 }
 </style>

<body id="b1">
<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class=""></i> Register
      </h1>
      <% include ./partials/messages %>
      <form action="/operators/register" method="POST">
        <div class="form-group">
          <label for="name">Name:</label>
          <input type="name" id="name" name="name" class="form-control" placeholder="Enter your Name"
            value="<%= typeof name != 'undefined' ? name : '' %>" />
        </div>
        <div class="form-group">
          <label for="email">Email:</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email id"
            value="<%= typeof email != 'undefined' ? email : '' %>" />
          <div class="form-group">
            <label for="company">Company:</label>
            <input type="company" id="company" name="company" class="form-control" placeholder="Enter company name"
              value="<%= typeof company != 'undefined' ? company : '' %>" />
          </div>
          <div class="form-group">
            <label for="dob">Date Of Birth:</label>
            <input type="dob" id="dob" name="dob" class="form-control" placeholder="Enter DOB"
              value="<%= typeof dob != 'undefined' ? dob : '' %>" />
          </div>

          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Create new Password"
              value="<%= typeof password != 'undefined' ? password : '' %>" />
          </div>
          <div class="form-group">
            <label for="password2">Confirm Password</label>
            <input type="password" id="password2" name="password2" class="form-control" placeholder="Confirm Password"
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
          </div>
          <button type="submit" class="btn btn-danger btn-block">
            Register
          </button>
      </form>
      <p class="lead mt-4">Click Here to Login:- <a href="/operators/login">Login</a></p>
    </div>
  </div>
</div>
</body>
</html>